@using InternetBanking.Application.ViewModels.Payment
@model ExpressPaymentSaveViewModel
@{
    Layout = "_LayoutPayment";
}
<div class="container mt-5 center-container">
    <div class="bg-white content shadow">
        <h2 class="text-center mb-4">Realizar Pago Express</h2>
        <div class="row justify-content-center">
            <div class="col-md-11">

                <form class="paymentForm" asp-action="ExpressPayment">
                    <div class="form-group">
                        <label for="select1">Ingrese un numero de cuenta valido:</label>
                        <input type="text" asp-for="IdentifierAccount" class="form-control" />
                        <span asp-validation-for="IdentifierAccount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="select2">Selecciona Cuenta Ahorro</label>
                        <select asp-for="AccountPaymentFrom" class="form-control" id="select2">
                            <option>Opción A</option>
                            <option>Opción B</option>
                            <option>Opción C</option>
                        </select>
                        <span asp-validation-for="AccountPaymentFrom" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Monto a pagar</label>
                        <input type="number" id="Amount" class="form-control" asp-for="Amount" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <button type="submit" id="btnSubmit" class="btn btn-primary btn-block" disabled>Pagar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    $("#Amount").on('propertychange input', function (e) {
        if ($(this).val() > 0) {
            $("#btnSubmit").prop("disabled", false)
        } else {
            $("#btnSubmit").prop("disabled", true)
        }
    });
</script>
