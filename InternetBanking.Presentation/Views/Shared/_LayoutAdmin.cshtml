<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternetBanking.Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/InternetBanking.Presentation.styles.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            margin-bottom: 0px;
        }
    </style>

</head>

<body>
    <div class="bg-success">
        <div class="container">
            <header class="d-flex justify-content-center py-3">
                <h3 class="p-2 text-center g-0 m-0 text-white">Funcionalidades del Administrador</h3>
            </header>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-0 px-0 bg-success">
                <div class=" d-flex flex-column align-items-center align-items-sm-start pt-2 text-white w-100">
                <ul class="navbar-nav w-100 min-vh-100">
                    <li class="nav-item d-flex justify-content-center mt-5 w-100">
                        <h4 class="w-100">
                            <a class="nav-link text-white btn btn-outline-primary border-0 w-100" asp-area=""
                               asp-controller="Admin" asp-action="Index"><i class="bi bi-house-gear-fill"></i> Home</a>
                            <li class="nav-item d-flex justify-content-center mt-2 w-100">
                        <h4 class="w-100">
                            <a class="nav-link text-white btn btn-outline-primary border-0 w-100"
                               asp-area="" asp-controller="Admin" asp-action="Users"><i class="bi bi-person"></i> Usuarios</a>
                        </h4>
                    </li>
                        </h4>
                    </li>
                </ul>
            </div>
        </div>
        <main role="main" class="col-md-9 col-xl-10 ">
            @RenderBody()
        </main>
    </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
